<div id="details">


    <div id="image-details">

    <img src="{{details.image}}" alt="picture">
    </div>

    <div id="text-details">
      <ol>  

    <h3>{{details.title}}</h3>
    <h4>Director: {{details.director}}</h4>
    <ul>Stars
    {{#each details.stars}}
    <li>{{this}}</li>
    {{/each}}
    </ul>
    <p>{{details.description}}</p>
    <p>{{details.showtimes}}</p>
    </ol>
  </div>


</div>